<div class="row bet-row" data-toggle="collapse" data-target="#demo-{{elementId}}">
  <div class="col-xs-12 col-lg-4">
    <img src={{game.visitingTeam.image}} class="team-image {{if (eq betingTeam game.visitingTeam) 'cool-border'}}"> <br>
    {{game.visitingTeam.name}}
  </div>
  <div class="col-xs-12 col-lg-4" style="text-align: center; margin-top: 32px; font-size: 30px;">
    @
  </div>
  <div class="col-xs-12 col-lg-4">
    <img src={{game.homeTeam.image}} class="team-image {{if (eq betingTeam game.homeTeam) 'cool-border'}}"> <br>
    {{game.homeTeam.name}}
  </div>
</div>

{{#if game.round.roundHasBeenFineshed}}
  <div class="row" class="text-align: center">
    {{#each game.bets as |bet|}}
      Você fez {{bet.points}} pontos nessa partida! <br>
      Você {{bet-status bet.hit}} essa partida!
    {{/each}}
  </div>
{{/if}}

<div class="row collapse" id="demo-{{elementId}}">
  <form>
    <div class="form-group">
      <label for="tipo">Selecione um tipo de aporta</label>
      <select onchange={{action (mut selectedType) value="target.value"}} class="form-control" style="max-width: 200px; margin: 0 auto">
        {{#each betType as |type|}}
          <option value={{type}} selected={{eq type selectedType}}>{{type}}</option>
        {{/each}}
      </select>
    </div>
    <div class="form-group">
      <div class="row">
        <label for="time">Selecione o Time</label>
      </div>
      <div class="row">
        <div class="col-lg-6">
          <button class="btn {{if (eq betingTeam game.visitingTeam) 'bet-selected'}}" {{action 'bet' game.visitingTeam}}>{{game.visitingTeam.name}}</button>
        </div>
        <div class="col-lg-6">
          <button class="btn {{if (eq betingTeam game.homeTeam) 'bet-selected'}}" {{action 'bet' game.homeTeam}}>{{game.homeTeam.name}}</button>
        </div>
      </div>
    </div>
    <button class="btn btn-default" {{action 'sendBet'}}>Apostar</button>
  </form>
</div>
